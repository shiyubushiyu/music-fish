<!-- components/song-item-v1/song-item-v1.wxml -->
<view class="item" bindtap="onSongItemTap">
  <image class="image" src="{{itemData.al.picUrl}}" />
  <view class="info">
    <view class="name">{{itemData.name}}</view>
    <view class="source">{{itemData.ar[0].name}}</view>
  </view>
  <view class="arrow">
    <van-icon name="arrow" color="#666" size="16px"></van-icon>
  </view>
</view>