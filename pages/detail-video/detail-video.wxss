/* pages/detail-video/detail-video.wxss */
.detail {
  height: 100vh;
  overflow: hidden;
}
.mv-video {
  width: 100%;
  height: 200px;
  background-color: #000;
  z-index: 10;
}
.info {
  box-sizing: border-box;
  height: calc(100% - 200px);
}
.content {
  margin: 20rpx 20rpx 10rpx;
}
.info .artistName, .date {
  font-size: 30rpx;
  color: #666;
}
.info .title {
  padding: 30rpx 0;
}